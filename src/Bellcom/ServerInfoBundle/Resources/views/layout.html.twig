<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ServerInfo{% endblock %}</title>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/bellcomserverinfo/css/reset.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/bellcomserverinfo/css/main.css') }}" />
    </head>
    <body>
        <div id="symfony-wrapper">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}

            {% block content_header %}
                <ul id="menu">
                    {% block content_header_more %}
                        <li><a href="{{ path('_demo') }}">Demo Home</a></li>
                    {% endblock %}
                </ul>

                <div style="clear: both"></div>
            {% endblock %}

            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

            {% if code is defined %}
                <h2>Code behind this page</h2>
                <div class="symfony-content">{{ code|raw }}</div>
            {% endif %}
        </div>
        {% block javascripts %}
          <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
          <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js"></script>
          <script type="text/javascript" src="http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js"></script>
          <script src="{{ asset('bundles/bellcomserverinfo/js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
          <script src="{{ asset('bundles/bellcomserverinfo/js/jquery.tablesorter.extras-0.1.22.min.js') }}" type="text/javascript"></script>
          <!--<script src="{{ asset('bundles/bellcomserverinfo/js/jquery.tablesorter.pager.js') }}" type="text/javascript"></script>-->
          <script src="{{ asset('bundles/bellcomserverinfo/js/main.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
